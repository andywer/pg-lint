{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017.object"],
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../types/*"]
    },
    "strict": true,
    "typeRoots": ["../node_modules/@types", "../types"]
  },
  "include": [
    "./test.ts",
    "../types/*.d.ts"
  ]
}
